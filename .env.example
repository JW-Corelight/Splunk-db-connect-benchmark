# Database Benchmark Environment Variables
# Copy this file to .env and customize as needed
# DO NOT commit .env to version control

# ==========================================
# PostgreSQL Configuration
# ==========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_postgres_password
POSTGRES_DB=cybersecurity

# ==========================================
# ClickHouse Configuration
# ==========================================
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DEFAULT_ACCESS_MANAGEMENT=1

# ==========================================
# StarRocks Configuration
# ==========================================
STARROCKS_FE_JAVA_OPTS=-Xmx2048m -XX:+UseG1GC
STARROCKS_BE_MEM_LIMIT=85%

# ==========================================
# Splunk Configuration
# ==========================================
SPLUNK_PASSWORD=CHANGE_ME_ComplexPassword123
SPLUNK_START_ARGS=--accept-license
SPLUNK_LICENSE_URI=Free
SPLUNK_ENABLE_LISTEN=9997

# ==========================================
# MinIO S3 Configuration
# ==========================================
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=CHANGE_ME_minio_secret
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET=warehouse
MINIO_REGION=us-east-1

# ==========================================
# Benchmark Configuration
# ==========================================
BENCHMARK_DATA_SIZE=100000
BENCHMARK_ITERATIONS=5
BENCHMARK_WARMUP=2
BENCHMARK_TIMEOUT=300

# ==========================================
# Docker Resource Limits
# ==========================================
# Adjust these based on your Mac's memory
# 16GB Mac: Use defaults below
# 24GB Mac: Increase by 50%
DOCKER_MEMORY_LIMIT=12288m
DOCKER_CPU_LIMIT=6

# ==========================================
# Monitoring Configuration
# ==========================================
ENABLE_MONITORING=true
METRICS_PORT=9090
GRAFANA_PORT=3000

# ==========================================
# Data Generation Settings
# ==========================================
DATA_START_DATE=2024-11-01
DATA_END_DATE=2024-12-07
DATA_EVENT_RATE=1000  # Events per hour
DATA_USER_COUNT=1000
DATA_HOST_COUNT=100
