<?xml version="1.0"?>
<!-- ClickHouse Users Configuration -->
<clickhouse>
    <users>
        <!-- Default user with no password -->
        <default>
            <password></password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
        </default>

        <!-- Benchmark user (if needed for isolation) -->
        <benchmark>
            <password></password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>benchmark</profile>
            <quota>default</quota>
        </benchmark>
    </users>

    <profiles>
        <!-- Default profile -->
        <default>
            <max_memory_usage>4000000000</max_memory_usage>
            <use_uncompressed_cache>1</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
            <log_queries>0</log_queries>
            <log_query_threads>0</log_query_threads>
            <max_execution_time>300</max_execution_time>
            <readonly>0</readonly>
        </default>

        <!-- Benchmark profile (optimized for query performance) -->
        <benchmark>
            <max_memory_usage>6000000000</max_memory_usage>
            <use_uncompressed_cache>1</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
            <log_queries>0</log_queries>
            <log_query_threads>0</log_query_threads>
            <max_execution_time>600</max_execution_time>
            <max_rows_to_read>0</max_rows_to_read>
            <max_bytes_to_read>0</max_bytes_to_read>
            <readonly>0</readonly>
            <allow_ddl>1</allow_ddl>
        </benchmark>
    </profiles>

    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
</clickhouse>
